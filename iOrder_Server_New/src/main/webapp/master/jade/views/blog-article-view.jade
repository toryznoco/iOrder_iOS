    // Article sidebar
    .col-lg-3
      .panel.panel-default
        .panel-body
          p.lead Article Data
          p Categories
          ui-select.mb-lg(multiple='', ng-model='art.postDemo.categories', theme='bootstrap', ng-disabled='art.disabled')
            ui-select-match(placeholder='Select category...') {{$item}}
            ui-select-choices(repeat='color in art.availableCategories') {{color}}    
          p Tags
          ui-select.mb-lg(multiple='', ng-model='art.postDemo.tags', theme='bootstrap', ng-disabled='art.disabled')
            ui-select-match(placeholder='Select tag...') {{$item}}
            ui-select-choices(repeat='color in art.availableTags') {{color}}    
          p Reviewers
          ui-select.mb-lg(multiple='', ng-model='art.postDemo.selectedReviewers', theme='bootstrap', ng-disabled='art.disabled')
            ui-select-match(placeholder='Select reviewer...') {{$item.name}} &lt;{{$item.email}}&gt;
            ui-select-choices(repeat='person in art.reviewers | propsFilter: {name: $select.search, age: $select.search}')
              div(ng-bind-html='person.name | highlight: $select.search')
              small
                | email: {{person.email}}        age: 
                span(ng-bind-html="''+person.age | highlight: $select.search")
          p.lead SEO Metadata
          .form-group
            p Title 
            input.form-control(type='text', placeholder="Brief description..")
          .form-group
            p Description 
            textarea.form-control(rows='5', placeholder='Max 255 characters...')
          .form-group 
            p Keywords
            textarea.form-control(rows='5', placeholder='Max 1000 characters...')

