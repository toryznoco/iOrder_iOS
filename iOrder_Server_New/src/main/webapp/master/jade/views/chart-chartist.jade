h3 Chartist
  small SIMPLE RESPONSIVE CHARTS
.container-fluid(ng-controller='ChartistController')
  .row
    .col-md-4
      .panel.panel-default
        .panel-heading Bar bipolar
        .panel-body
          .ct-chart(chartist="", chartist-data='barBipolarData', chartist-chart-type='Bar', chartist-chart-options="barBipolarOptions")
    .col-md-4
      .panel.panel-default
        .panel-heading Bar Horizontal
        .panel-body
          .ct-chart(chartist="", chartist-data='barHorizontalData', chartist-chart-type='Bar', chartist-chart-options="barHorizontalOptions")
    .col-md-4
      .panel.panel-default
        .panel-heading Line
        .panel-body
          .ct-chart(chartist="", chartist-data='lineData', chartist-chart-type='Line', chartist-chart-options="lineOptions")

  .row
    .col-md-6  
      .panel.panel-default
        .panel-heading Smil Animations
        .panel-body
          .ct-chart(chartist="", chartist-chart-type='Line', chartist-data='smilData', chartist-chart-options="smilOptions", chartist-events="smilEvents")
    .col-md-6  
      .panel.panel-default
        .panel-heading SVG Path Animations
        .panel-body
          .ct-chart(chartist="", chartist-chart-type='Line', chartist-data='pathData', chartist-chart-options="pathOptions", chartist-events="pathEvents")
